<%= form_with(model: @room, remote: true, class: 'd-flex') do |f| %>

    <%= f.text_field :name, class: 'form-control', data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"},
    autocomplete: 'off' %>
    
    <%= f.submit data: {disable_with: false}, class: 'btn btn-primary' %>
    
<% end %>