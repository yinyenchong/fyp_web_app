<% provide(:title, 'Chat Index') %>

<div id="chatroom_container" class="row, bg-dark text-light">
    
    <div id="side-panel" class="col-md-4 col-sm-4">    
    
        <h5> <%= current_user.name %>  </h5>
        
        <h4>Users</h4>
        
        <%= turbo_stream_from "users" %>
        
        <div id="users">
            <%= render @users.without_students %>
        </div>
        
    
    </div>
    
    <div id="room_container" class="col-md-8 col-sm-8 bg-dark text-light">
        
     
        <% if @single_room %>
            <div id="single_room">
                <h4 class="text-center"> <%= @user&.name || @single_room.name %> </h4>
                
                <%= turbo_stream_from @single_room %>
                
                <div id="messages">
                    
                <%= render @messages %>
                
                </div>
                    <%= render 'messages/new_message_form' %>
                </div>
        <% end %>

     
    </div>
    
    
    
</div>