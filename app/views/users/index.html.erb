<meta name="viewport" content="width=device-width, initial-scale=1" />

<% provide(:title, 'All Users') %>

<h1>All Users</h1>


  <div class="index-tables">
  
  <table class="table table-bordered table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created At</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>
   
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user, :class => 'a' %></td>
        <td><%= user.created_at %></td>
        <td><%= user.roles.pluck(:name) %></td>
        <!-- Might want to change to edit_user_path(user) -->
        <td><%= link_to 'Edit Roles', edit_user_path(user.id), :class => 'button2-tables' %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>

</div>